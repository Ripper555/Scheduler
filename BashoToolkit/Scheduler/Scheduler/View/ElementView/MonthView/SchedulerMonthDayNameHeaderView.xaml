<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="Basho.Toolkit.Scheduler.SchedulerMonthDayNameHeaderView"
	x:Name="UserControl"
    x:ClassModifier="internal"
	d:DesignWidth="172" d:DesignHeight="32">

	<Grid x:Name="LayoutRoot">
		<TextBlock Text="{Binding DayOfWeek, Mode=Default, FallbackValue=day of week}" TextWrapping="Wrap" d:LayoutOverrides="Width, Height" VerticalAlignment="Center" HorizontalAlignment="Center"/>
	</Grid>
</UserControl>